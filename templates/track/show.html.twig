{% extends 'base.html.twig' %}

{% block title %}Track{% endblock %}

{% block body %}
    <h1>Track</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ track.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ track.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ track.duration ? track.duration|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td><a href="/artiste/{{ track.artiste }}">{{ track.artiste }}</a> </td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ track.file }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('track_index') }}">back to list</a>

    <a href="{{ path('track_edit', {'id': track.id}) }}">edit</a>

    {{ include('track/_delete_form.html.twig') }}
{% endblock %}
